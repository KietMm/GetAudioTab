{
  "manifest_version": 3,
  "name": "Tab Audio Recorder",
  "version": "1.0",
  "description": "Record audio from current tab",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 